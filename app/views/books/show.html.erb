<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'list', user: @book.user %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user==current_user %>
                <%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user==current_user %>
                <%= link_to "Destroy", book_path, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
              <% end %>
            </td>
          </tr>
        <tbody>
      </table>
    </div>
  </div>
</div>